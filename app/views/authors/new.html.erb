<%= form_for @author,:html => { :multipart => true } do |f|%>
<% if @author.errors.any?%>
<% @author.errors.messages.each do |err|%>
<%= err%>
<%end%>
<%end%>
<%= f.label :name%>
<%= f.text_field :name%>
<%= f.label :email%>
<%= f.text_field :email%>

<%= f.fields_for :image do |b|%>
<%= b.file_field :photo%>
<%end%>

<%= f.submit%>
<%end%>
